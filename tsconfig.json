{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "outDir": "./dist/",
    "alwaysStrict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"],
      "components/*": ["./src/components/*"],
      "demo/*": ["./src/demo/*"],
      "utils/*": ["./src/utils/*"],
      "plugin/*": ["./src/plugin/*"]
    }
  }
}
