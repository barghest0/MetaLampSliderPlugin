doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    script(
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
    )
    link(
      rel="apple-touch-icon",
      sizes="60x60",
      //- using require() of resources you don't need 'copy-webpack-plugin'
      href=require("images/apple-touch-icon.png")
    )
    link(
      rel="icon",
      type="image/png",
      sizes="32x32",
      href=require("images/favicon-32x32.png")
    )
    link(
      rel="icon",
      type="image/png",
      sizes="16x16",
      href=require("images/favicon-16x16.png")
    )
    link(
      rel="mask-icon",
      href=require("images/safari-pinned-tab.svg"),
      color="#5bbad5"
    )
    
    //- use style source files via require
    link(rel='stylesheet' href=require('./index.scss'))
    link(rel='stylesheet' href=require('style/slider.scss'))
    
    title Slider Plugin
  body 
    include pug-components/panel/panel.pug
    .index
      .index__container
        .index__sliders
          +panel({ instance: 1 })
          +panel({ instance: 2 })
          +panel({ instance: 3 })
          +panel({ instance: 4 })
          +panel({ instance: 5, isInline: true })

    //- use script source files via require
    script(src=require('plugin/plugin.ts'))
    script(src=require('demo/index.ts'))

